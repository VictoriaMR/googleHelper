{
	"manifest_version": 2,
	"name": "产品助手",
	"version": "2.0",
	"description": "阿里巴巴供应商产品助手",
	"browser_action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"128": "images/icon-128.png"
		}
	},
	"icons" : {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"background": {
		"scripts": ["scripts/socket.js", "scripts/qs.js", "scripts/background.js"]
	},
	"content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["scripts/content.js"],
        "all_frames": false
    }],
    "permissions": [
        "tabs",
        "cookies",
        "webRequest",
        "webRequestBlocking",
        "*://*/*"
    ],
    "externally_connectable": {
        "matches": ["*://*/*"]
    }
}